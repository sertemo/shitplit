# Usa una imagen base de Python ligera
FROM python:3.11-slim

# Instalar dependencias necesarias para Poetry y compilación
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    curl \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Instalar Poetry
RUN curl -sSL https://install.python-poetry.org | python3 -

# Agregar Poetry al PATH
ENV PATH="/root/.local/bin:$PATH"

# Establecer el directorio de trabajo
WORKDIR /app

# Copiar solo los archivos necesarios para instalar las dependencias (mejora el caché)
COPY pyproject.toml poetry.lock /app/

# Instalar las dependencias de la aplicación y el propio paquete en editable mode
RUN poetry install --no-root --only main && poetry install --no-dev

# Copiar el resto de la aplicación
COPY . /app

# Asegurar que el directorio actual esté en el PYTHONPATH
ENV PYTHONPATH=/app

# Exponer los puertos que utiliza la aplicación
EXPOSE 60751 8000

# Comando para ejecutar la aplicación
CMD ["sh", "-c", "poetry run uvicorn src.shitplit.backend.main:app --host 0.0.0.0 --port 8000 & poetry run flet run src/shitplit/frontend/main.py --web --port 60751"]
